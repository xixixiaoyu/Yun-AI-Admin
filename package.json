{
  "name": "admin-system",
  "version": "1.0.0",
  "description": "基于 Vue 3 + NestJS 的后台管理系统",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/*\" dev",
    "build": "pnpm --filter \"./packages/*\" build && pnpm --filter \"./apps/*\" build",
    "lint": "eslint . --ext .js,.ts,.vue --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js,.ts,.vue --ignore-path .gitignore --fix",
    "format": "prettier --write \"**/*.{js,ts,vue,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,ts,vue,json,md,yml,yaml}\"",
    "clean": "pnpm --recursive clean && rimraf dist coverage .nyc_output",
    "test": "pnpm --recursive test",
    "type-check": "pnpm --recursive type-check",
    "prepare": "husky",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "admin",
    "vue3",
    "nestjs",
    "typescript",
    "monorepo",
    "pnpm"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-vue": "~10.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0",
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
